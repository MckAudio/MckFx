    "version": "0.2.0",
    "configurations": [
        {
            "name": "(mac) MckTrem",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/Source/Trem/MckTremPlugin_artefacts/Debug/VST3/MckTrem.vst3/Contents/MacOS/MckTrem",
            "MIMode": "lldb"
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/MckDelayPlugin_artefacts/Debug/VST3/MckDelay.vst3/Contents/x86_64-linux/MckDelay.so",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/LinuxMakefile/build/MckDelay",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}